    <div id="modal-chamada" class="modal-container">
      <div class="modal">
          <button class="fechar">x</button>

          <form action="http://localhost:8070/inserirAluno" method="post" class="include">

            <h1>Preencha os campos abaixo para adicionar um novo aluno!</h1>

            <div class="include_student">
              <label for="RM">RM:</label>
              <input type="number" name="rm" id="rm-aluno" value="">
            </div>
            
              <div class="include_student">
                <label for="NM_ALUNO"> Nome:</label>
                <input type="text" name="nm_aluno" id="name">
              </div>

              <div class="include_student">
                <label for="CPF_ALUNO">CPF:</label>
                <input type="text" name="cpf_aluno" id="cpf" maxlength="14" autocomplete="off">
              </div>


              <div class="include_student">
                <label for="TEL_ALUNO">Telefone:</label>
                <input type="tel" name="tel_aluno" id="telefone" maxlength="16">
              </div>

              <div class="include_student">
                <label for="email_aluno">E-mail:</label>
                <input type="email" name="email_aluno" id="email_aluno">
              </div>
              
              <div class="include_student">
                <label for="senha_aluno">Senha:</label>
                <input type="password" name="senha_aluno" id="senha_aluno" maxlength="16">
              </div>
              
              <div class="include_student">
                <label for="id_turma_aluno">Turma:</label>
                <input type="checkbox" name="id_turma_aluno" id="id_turma_aluno" maxlength="1">
              </div>

              <button id="incluir" type="submit" >incluir</button>

          </form>

      </div>

    </div>

